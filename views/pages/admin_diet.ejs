                      <th>Food</th>
                      <th>Calories</th>
                      <th>Fat (g)</th>
                      <th>Carbs (g)</th>
                      <th>Protien (g)</th>
                    </tr>
                    <% db.forEach((post) => {%>
                      <% if(post.meal == "breakfast") { %>
                        <tr>
                          <td><%=post.foodname%></td>
                          <td><%=post.cals%></td>
                          <td><%=post.fat%></td>
                          <td><%=post.carbs%></td>
                          <td><%=post.protien%></td>
                        </tr>
                      <% } %>
                    <% }) %>
                  </table>
                </div>

