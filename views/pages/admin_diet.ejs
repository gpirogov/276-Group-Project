    <body>
      <div class="topnav">
        <a href="admin"><img src="images/logo-inverted.png"class="logo"></a>
        <a href="logout" class="navbar">Signout</a>
        <a href="adminPage" class="navbar">All User</a>
      </div>

      <div class="centerdiv">
        <div>
          <h1><%=name%> Diet</h1>
          <div class="date">
            <select  name ="date" id="date" onchange="change_data(value);">
              <% db_date.forEach((post) => {%>
                <option value="<%-post.date%>"><%-post.date%></option>
              <% }) %>
            </select>
          </div>

          <!--  need loop for different date  -->

              <div class="admindiv">

                <div class="breakfast">
                  <div><h3><u>Breakfast</u></h3></div>
