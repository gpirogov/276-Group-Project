  <script src="/js/forum-addpost.js" charset="utf-8"></script>
</head>
<body>
  <div class="topnav">
    <a href="homepage"><img src="/images/logo-inverted.png"class="logo"></a>
    <a href="logout" class="navbar">Signout</a>
    <a href="profile" class="navbar">Profile</a>
    <form class="go-to-workout-page" action="/go-to-workout-page" method="post">
      <button type="submit" class="navbar">Workout</button>
    </form>
    <a href="diet.html" class="navbar">Diet</a>
    <a href="forum.html" class="navbar">Forum</a>
    <a href="homepage" class="navbar">Homepage</a>
    <h2>WORKOUT FORUM</h2>
  </div>
  <div class="forumTopic">
      <a href="/forums"> Home </a>
      <span>
        <h3 class="topicTitle"><%= topic.toUpperCase() %></h3>
        <div align="right">
          <button type="button" class= "addbutton" id="addButton" name="addButton">New Post</button>
        </div>
      </span>
      <p>Discuss everything <%= topic %> related here!</p>
      <!-- potentials: Weight loss <i class="fas fa-weight"></i>, running, .... -->

      <div class="popup" id="popup">
        <div class="popupInner" id="popupInner">
          <button type="button" class="cancel" id="cancel" name="cancel">Cancel</button>

          <form class="addForm" id="addForm" method="post" action="/forumAddPost" >
            <h1> Add New Post </h1>
            <label for="title"><b>Title</b></label> <br />
            <input type="text" name="title" /> <br />

            <!-- <input type="text" name="content" /> <br /> -->
            <textarea class="addPostContent" id="postContent" name="content"></textarea> <br />


            <!-- will eventually be removed -->
            <!-- <label for="username"><b>Username</b></label> <br />
            <input type="text" name="username" /> <br /> -->

            <!-- hidden input - topic -->
            <input type="hidden" name="username" value="<%= username %>"/> <br />
            <input type="hidden" name="topic" value="<%= topic %>"/>

            <div class="submitdiv">
              <input class="submitButton" id="submitButton" value="SUBMIT" type="submit" />

            </div>
          </form>

        </div>
      </div>


      <% if(results) { %>
        <% results.forEach(function(r) { %>
          <div class="post">
            <div class="postDesc">
              <span>
                <a class="titlePreview" href="/forums/<%= r.topic %>/<%= r.id.toString() %>"> <%= r.title %> </a>
                <p class ="posterUsernamePreview"> <%= r.username %> </p>
              </span>

              <p class="postContentPreview">  <%= r.content %>  </p>
            </div>
          </div>
          <% }); %>

      <% } %>


