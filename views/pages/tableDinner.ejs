<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title> Burning + </title>
  <link rel="stylesheet" href="./stylesheets/starterpage.css">
  <link rel="stylesheet" href="./stylesheets/diet.css">
  <link rel="stylesheet" href="./stylesheets/nav-bar.css">
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"  ></script>
  <script src="js/diet.js"></script>
  <script src="js/mealCalorieCalc.js"></script>

  <!-- datepicker from  https://jqueryui.com/datepicker/-->
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
  </script>
</head>
<body>
  <div class="topnav">
    <a href="homepage"><img src="images/logo-inverted.png"class="logo"></a>
    <a href="logout" class="navbar">Signout</a>
    <a href="profile" class="navbar">Profile</a>
    <a href="workout-physique.html" class="navbar">Workout</a>
    <a href="diet" class="navbar">Diet</a>
    <a href="forum.html" class="navbar">Forum</a>
    <a href="homepage" class="navbar">Homepage</a>
    <!-- <h2>Nutrition</h2> -->
  </div>


  <div class="formdiv">
    <a id = "backLink" href="/diet"> Back </a>
    <h1>Dinner</h1>
    <h3 id= "totalTableCals">totalTableCals</h3>

    <form name = "dinnerDateMealForm" action ="dinnerDateMealSearch" method="post">
      <!-- date picker -->
      <span>Date: <input size = '10' type="text" id="datepicker" name = "dateMealSearch" value = <%= date %> ></span>
      <button type = "submit" id="dateMealSearchButton" >Go </button>
    </form>

    <table id="dynamicMealTable" class="meals">
          <tr class = "dynamicMealTableHeaders">
              <th>Food</th>
              <th>Calories</th>
              <th>Fat (g)</th>
              <th>Carbs (g)</th>
              <th>Protien (g)</th>
          </tr>

            <% for(var i = 0; i < data.rows.length; i++) { %>
              <tr class = "<%= data.rows[i].username %>">
                <td class = "<%= data.rows[i].meal %>"> <%= data.rows[i].foodname %> </td>
                <td class = "<%= data.rows[i].date %>"> <%= data.rows[i].cals %> </td>
                <td> <%= data.rows[i].fat %> </td>
                <td> <%= data.rows[i].carbs %> </td>
                <td> <%= data.rows[i].protien %> </td>
                <td class = "deleteCell"> <button>Remove</button> </td>
              </tr>
            <% } %>
    </table>
  </div>
</body>
</html>
